<site pack200="true" associateSitesURL="http://dist.springframework.org/release/IDE">
	<description url="http://springide.org">
		This site provides plugins supporting the Spring Framework 
		(http://www.springframework.org/) within the Eclipse platform.
	</description>
	
	<!-- Core features -->
	<feature
		url="features/org.springframework.ide.eclipse.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.feature" version="@VERSION@">
		<category name="Core" />
	</feature>
	
	<!-- Dependency features -->
	<feature
		url="features/org.springframework.ide.eclipse.dependency.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.dependency.feature" version="@VERSION@">
		<category name="Dependencies" />
	</feature>
	
	<!-- Extenions features -->
	<feature
		url="features/org.springframework.ide.eclipse.aop.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.aop.feature" version="@VERSION@">
		<category name="Extensions" />
	</feature>
	
	<feature
		url="features/org.springframework.ide.eclipse.osgi.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.osgi.feature" version="@VERSION@">
		<category name="Extensions" />
	</feature>
	
	<feature
		url="features/org.springframework.ide.eclipse.security.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.security.feature" version="@VERSION@">
		<category name="Extensions" />
	</feature>

	<feature
		url="features/org.springframework.ide.eclipse.webflow.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.webflow.feature" version="@VERSION@">
		<category name="Extensions" />
	</feature>
	
	<!-- Extenions (Incubation) features -->	
	<feature
		url="features/org.springframework.ide.eclipse.autowire.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.autowire.feature" version="@VERSION@">
		<category name="Extensions (Incubation)" />
	</feature>

	<feature
		url="features/org.springframework.ide.eclipse.javaconfig.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.javaconfig.feature" version="@VERSION@">
		<category name="Extensions (Incubation)" />
	</feature>
	
	<!-- Integration features -->
	<feature
		url="features/org.springframework.ide.eclipse.ajdt.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.ajdt.feature" version="@VERSION@">
		<category name="Integrations" />
	</feature>
	
	<feature
		url="features/org.springframework.ide.eclipse.mylyn.feature_@VERSION@.jar"
		id="org.springframework.ide.eclipse.mylyn.feature" version="@VERSION@">
		<category name="Integrations" />
	</feature>
	
	<category-def name="Core" label="Core" />
	<category-def name="Dependencies" label="Dependencies" />
	<category-def name="Extensions" label="Extensions" />
	<category-def name="Extensions (Incubation)" label="Extensions (Incubation)" />
	<category-def name="Integrations" label="Integrations" />
	
</site>