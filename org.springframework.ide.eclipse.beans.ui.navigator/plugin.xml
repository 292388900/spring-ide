<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer viewerId="org.eclipse.ui.navigator.ProjectExplorer"/>
      <viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension pattern="org.springframework.ide.eclipse.beans.ui.navigator.*"/>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            id="org.springframework.ide.eclipse.beans.ui.navigator.content"
            name="%navigatorContentName"
            contentProvider="org.springframework.ide.eclipse.beans.ui.navigator.internal.views.BeansNavigatorContentProvider"
            labelProvider="org.springframework.ide.eclipse.beans.ui.navigator.internal.views.BeansNavigatorLabelProvider"
            icon="icons/full/obj16/spring_obj.gif"
            activeByDefault="true">
		<triggerPoints>
			<or>
				<adapt
						type="org.eclipse.core.resources.IProject">
					<test
						property="org.eclipse.core.resources.projectNature"
						value="org.springframework.ide.eclipse.core.springnature"/>
				</adapt>
				<and>
					<instanceof
							value="org.eclipse.core.resources.IFile"/>
					<test
							property="org.springframework.ide.eclipse.beans.core.model.isBeansConfig"/>
				</and>
			</or>
		</triggerPoints>
         <possibleChildren>
				<instanceof
						value="org.springframework.ide.eclipse.core.model.IModelElement"/>
         </possibleChildren>
      </navigatorContent>
   </extension>
    <extension
          point="org.eclipse.ui.navigator.linkHelper">
       <linkHelper
             id="org.springframework.ide.eclipse.beans.ui.navigator.linkHelper"
             class="org.springframework.ide.eclipse.beans.ui.navigator.internal.views.BeansNavigatorLinkHelper">
          <selectionEnablement>
             <instanceof value="org.springframework.ide.eclipse.core.model.IModelElement"/>
          </selectionEnablement>
       </linkHelper>
    </extension>

</plugin>
