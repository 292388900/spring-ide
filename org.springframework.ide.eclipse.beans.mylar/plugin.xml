<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	
	<extension point="org.eclipse.mylar.context.core.bridges">
		<structureBridge
        	class="org.springframework.ide.eclipse.beans.mylar.core.BeansContextStructureBridge"
	        id="org.springframework.ide.eclipse.beans.ui.mylar.context.beans"
    	    name="%beansContextStructureBridge.name"
        	parentContentType="*"/>
	</extension>

	<extension point="org.eclipse.mylar.context.ui.bridges">
		<uiBridge
			class="org.springframework.ide.eclipse.beans.mylar.ui.BeansContextUIBridge"
			contentType="spring/beans"
			id="mework.ide.eclipse.beans.ui.mylar.context.ui.beans"
			name="%beansContextUIBridge.name" />
	</extension>

	<extension point="org.eclipse.ui.actionSets">
		<actionSet id="org.eclipse.mylar.java.actionSet"
			label="Mylar Spring" visible="true">
			<action
				label="%toggleActiveFoldingAction.label" 
				tooltip="%toggleActiveFoldingAction.tooltip"
				toolbarPath="org.eclipse.ui.edit.text.actionSet.presentation/Presentation"
				id="org.springframework.ide.eclipse.beans.ui.mylar.folding.auto"
				class="org.eclipse.mylar.internal.java.ui.actions.ToggleActiveFoldingAction"
				definitionId="org.springframework.ide.eclipse.beans.ui.mylar.folding.auto"
				icon="icons/elcl16/interest-folding.gif"
				style="toggle" />
		</actionSet>
	</extension>

	<extension point="org.eclipse.ui.popupMenus">
		<objectContribution adaptable="true"
			id="org.springframework.ide.eclipse.ui.interest"
			objectClass="org.springframework.ide.eclipse.core.model.IModelElement">
			<action
				label="%interestDecrementAction.label" 
				tooltip="%interestDecrementAction.tooltip"
				menubarPath="additions"
				id="org.springframework.ide.eclipse.ui.interest.actions.InterestDecrementAction"
				class="org.eclipse.mylar.internal.context.ui.actions.InterestDecrementAction"
				icon="icons/elcl16/interest-decrease.gif"
				enablesFor="*" />
			<action 
				label="%interestIncrementAction.label"
				tooltip="%interestIncrementAction.tooltip" 
				menubarPath="additions"
				id="org.springframework.ide.eclipse.ui.interest.actions.InterestIncrementAction"
				class="org.eclipse.mylar.internal.context.ui.actions.InterestIncrementAction"
				icon="icons/elcl16/interest-increase.gif" 
				enablesFor="*" />
		</objectContribution>
	</extension>
	
</plugin>
