<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

    <extension
         point="org.eclipse.ui.decorators">
      <decorator
            lightweight="true"
            label="Spring Advice decorator"
            class="org.springframework.ide.eclipse.aop.ui.decorator.BeansAdviceImageDecorator"
            state="true"
            adaptable="true"
            id="org.springframework.ide.eclipse.aop.ui.decorator.advicedecorator">
         <description>
			%advisesDecorator.description
		 </description>
         <enablement>
            <objectClass
                  name="java.lang.Object">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   
   <!--extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer viewerId="org.eclipse.ui.navigator.ProjectExplorer"/>
      <viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension pattern="org.springframework.ide.eclipse.aop.ui.navigator.projectExplorerContent"/>
            <contentExtension pattern="org.springframework.ide.eclipse.aop.ui.navigator.linkHelper"/>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension pattern="org.springframework.ide.eclipse.aop.ui.navigator.actions"/>
         </includes>
      </viewerActionBinding>
   </extension-->
   
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
  		<navigatorContent
            id="org.springframework.ide.eclipse.aop.ui.navigator.projectExplorerContent"
            name="Spring AOP Cross Reference"
            contentProvider="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigatorContentProvider"
            labelProvider="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigatorLabelProvider"
            icon="icons/full/obj16/spring_obj.gif"
            activeByDefault="true"
            priority="high">
	     <triggerPoints>
			<or>
                <instanceof value="org.eclipse.core.resources.IWorkspaceRoot"/>
				<adapt type="org.eclipse.core.resources.IProject">
					<test property="org.eclipse.core.resources.projectNature"
						value="org.springframework.ide.eclipse.core.springnature"/>
				</adapt>
				<and>
					<instanceof value="org.eclipse.core.resources.IFile"/>
					<test property="org.springframework.ide.eclipse.beans.core.model.isBeansConfig"/>
				</and>
			</or>
		 </triggerPoints>
         <possibleChildren>
				<instanceof value="org.springframework.ide.eclipse.core.model.IModelElement"/>
				<instanceof value="org.eclipse.core.resources.IFile"/>
         </possibleChildren>
	    <commonSorter 
               id="org.springframework.ide.eclipse.aop.ui.navigator.projectExplorerContent"
               class="org.springframework.ide.eclipse.aop.ui.navigator.util.BeansAopNavigatorSorter"/>
	   </navigatorContent>
	    
	   <actionProvider
            id="org.springframework.ide.eclipse.aop.ui.navigator.actions"
            class="org.springframework.ide.eclipse.aop.ui.navigator.action.BeansAopNavigatorActionProvider">
         <enablement>
             <instanceof value="org.springframework.ide.eclipse.aop.ui.navigator.model.IRevealableReferenceNode"/>
         </enablement>
      </actionProvider>
	       
    </extension>
    
    <extension
          point="org.eclipse.ui.navigator.linkHelper">
       <linkHelper
             id="org.springframework.ide.eclipse.aop.ui.navigator.linkHelper"
             class="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigatorLinkHelper">
          <selectionEnablement>
			 <instanceof value="org.springframework.ide.eclipse.aop.ui.navigator.model.IRevealableReferenceNode"/>
          </selectionEnablement>
          <editorInputEnablement>
             <instanceof value="org.eclipse.ui.IFileEditorInput"/>
          </editorInputEnablement>
       </linkHelper>
   </extension>
    
  <extension
     point="org.eclipse.ui.views">
      <view
            name="Beans Cross References"
            icon="icons/full/obj16/xref_obj.gif"
            category="org.springframework.ide.eclipse.beans.ui.views"
            class="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigator"
            id="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigator">
      </view>
   </extension> 
   
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer viewerId="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigator"/>
      <viewerContentBinding viewerId="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigator">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="org.springframework.ide.eclipse.aop.ui.navigator.projectExplorerContent"/>
            <contentExtension pattern="org.springframework.ide.eclipse.aop.ui.navigator.linkHelper"/>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding viewerId="org.springframework.ide.eclipse.aop.ui.navigator.BeansAopNavigator">
         <includes>
            <actionExtension pattern="org.springframework.ide.eclipse.aop.ui.navigator.actions"/>
         </includes>
      </viewerActionBinding>
   </extension>
</plugin>
