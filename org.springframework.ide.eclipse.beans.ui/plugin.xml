<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.springframework.ide.eclipse.beans.ui"
   name="%pluginName"
   version="1.2.3"
   provider-name="%providerName"
   class="org.springframework.ide.eclipse.beans.ui.BeansUIPlugin">

   <runtime>
      <library name="beans-ui.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.springframework.ide.eclipse.core"/>
      <import plugin="org.springframework.ide.eclipse.ui"/>
      <import plugin="org.springframework.ide.eclipse.beans.core"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%categoryView.springIDE"
            id="org.springframework.ide.eclipse.beans.ui.views">
      </category>
      <view
            name="%view.beansView"
            icon="icons/full/obj16/spring_obj.gif"
            category="org.springframework.ide.eclipse.beans.ui.views"
            class="org.springframework.ide.eclipse.beans.ui.views.BeansView"
            id="org.springframework.ide.eclipse.beans.ui.views.beansView">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <showInPart
               id="org.springframework.ide.eclipse.beans.ui.views.beansView">
         </showInPart>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <showInPart
               id="org.springframework.ide.eclipse.beans.ui.views.beansView">
         </showInPart>
      </perspectiveExtension>
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="org.springframework.ide.eclipse.beans.ui.actions.springBeansProject">
         <filter
               name="nature"
               value="org.springframework.ide.eclipse.beans.core.beansnature">
         </filter>
         <action
               label="%popupMenus.migrateSpringBeans.label"
               class="org.springframework.ide.eclipse.beans.ui.actions.MigrateSpringBeansProject"
               enablesFor="+"
               id="org.springframework.ide.eclipse.beans.ui.actions.migrateSpringBeans">
         </action>
      </objectContribution>

      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="org.springframework.ide.eclipse.beans.ui.actions.springUIProject">
         <filter
               name="nature"
               value="org.springframework.eclipse.core.springnature">
         </filter>
         <action
               label="%popupMenus.migrateSpringUI.label"
               class="org.springframework.ide.eclipse.beans.ui.actions.MigrateSpringUIProject"
               enablesFor="+"
               id="org.springframework.ide.eclipse.beans.ui.actions.migrateSpringUI">
         </action>
      </objectContribution>

      <viewerContribution
            targetID="#TextEditorContext"
            id="org.springframework.ide.eclipse.beans.ui.actions.beansConfigFile">
         <action
               label="%popupMenus.showInView.label"
               icon="icons/full/etool16/show_in_view.gif"
               definitionId="org.springframework.ide.eclipse.beans.ui.commands.showinview"
               class="org.springframework.ide.eclipse.beans.ui.actions.ShowInView"
               menubarPath="additions"
               id="org.springframework.ide.eclipse.beans.ui.actions.showInView">
         </action>
         <action
               label="%popupMenus.openJavaType.label"
               icon="icons/full/etool16/opentype.gif"
               definitionId="org.springframework.ide.eclipse.beans.ui.commands.openjavatype"
               class="org.springframework.ide.eclipse.beans.ui.actions.OpenJavaType"
               menubarPath="additions"
               id="org.springframework.ide.eclipse.beans.ui.actions.openjavatype">
         </action>
      </viewerContribution>
   </extension>

   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            name="%configurationPropertyPage"
            class="org.springframework.ide.eclipse.beans.ui.properties.ConfigurationPropertyPage"
            id="org.springframework.ide.eclipse.beans.ui.properties.ConfigurationPropertyPage">
         <filter
               name="nature"
               value="org.springframework.ide.eclipse.core.springnature">
         </filter>
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            lightweight="true"
            location="TOP_RIGHT"
            adaptable="true"
            label="%decorator.label"
            state="true"
            class="org.springframework.ide.eclipse.beans.ui.BeansUILabelDecorator"
            id="org.springframework.ide.eclipse.beans.ui.beansLabelDecorator">
         <description>
            %decorator.description
         </description>
         <enablement>
            <or>
               <objectClass
                    name="org.eclipse.core.resources.IFile">
               </objectClass>
               <or>
                  <objectClass name="org.eclipse.jdt.core.IJavaElement"/>
              </or>
            </or>
         </enablement>
      </decorator>
   </extension>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%actionSet.label"
            description="%actionSet.description"
            visible="true"
            id="org.springframework.ide.eclipse.beans.ui.actionSet">
         <action
               label="%actionSet.showInView.label"
               icon="icons/full/etool16/show_in_view.gif"
               definitionId="org.springframework.ide.eclipse.beans.ui.commands.showinview"
               class="org.springframework.ide.eclipse.beans.ui.actions.ShowInView"
               id="org.springframework.ide.eclipse.beans.ui.actionset.showinview">
         </action>
         <action
               label="%actionSet.openJavaType.label"
               icon="icons/full/etool16/opentype.gif"
               definitionId="org.springframework.ide.eclipse.beans.ui.commands.openjavatype"
               class="org.springframework.ide.eclipse.beans.ui.actions.OpenJavaType"
               id="org.springframework.ide.eclipse.beans.ui.actionset.openjavatype">
         </action>
      </actionSet>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="%commands.category.name"
            description="%commands.category.description"
            id="org.springframework.ide.eclipse.beans.ui.commands">
      </category>
      <command
            categoryId="org.springframework.ide.eclipse.beans.ui.commands"
            name="%commands.openJavaType.name"
            id="org.springframework.ide.eclipse.beans.ui.commands.openjavatype"/>
      <keyBinding
            commandId="org.springframework.ide.eclipse.beans.ui.commands.openjavatype"
            keySequence="Ctrl+Alt+T"
            contextId="org.eclipse.ui.textEditorScope"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration"/>
      <command
            categoryId="org.springframework.ide.eclipse.beans.ui.commands"
            name="%commands.showInView.name"
            id="org.springframework.ide.eclipse.beans.ui.commands.showinview"/>
      <keyBinding
            commandId="org.springframework.ide.eclipse.beans.ui.commands.showinview"
            keySequence="Ctrl+Alt+V"
            contextId="org.eclipse.ui.textEditorScope"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration"/>
   </extension>

</plugin>
