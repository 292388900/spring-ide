<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.springframework.ide.eclipse.beans.core"
   name="%pluginName"
   version="1.1.0"
   provider-name="%providerName"
   class="org.springframework.ide.eclipse.beans.core.BeansCorePlugin">

   <runtime>
      <library name="beans-core.jar">
         <export name="*"/>
         <packages prefixes="org.springframework.ide.eclipse.beans.core"/>
      </library>
      <library name="spring-core.jar">
         <export name="*"/>
         <packages prefixes="org.springframework"/>
      </library>
      <library name="commons-logging.jar">
         <packages prefixes="org.apache.commons.logging"/>
      </library>
      <library name="xmlParserAPIs.jar">
         <packages prefixes="javax.xml,org.apache.xmlcommons,org.w3c.dom,org.xml.sax"/>
      </library>
      <library name="xercesImpl.jar">
         <packages prefixes="org.apache,org.w3c.dom"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jdt.core"/>
   </requires>

   <extension
         id="beansnature"
         name="%beansNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.springframework.ide.eclipse.beans.core.internal.project.BeansProjectNature">
         </run>
      </runtime>
      <builder
            id="org.springframework.ide.eclipse.beans.core.beansvalidator">
      </builder>
   </extension>
   <extension
         id="problemmarker"
         name="%beansProblemMarker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute name="errorCode"/>
      <attribute name="beanID"/>
      <attribute name="errorData"/>
   </extension>
   <extension
         id="beansvalidator"
         name="%beansValidator"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.springframework.ide.eclipse.beans.core.internal.project.BeansProjectValidator">
         </run>
      </builder>
   </extension>

</plugin>
