			<public 
				publicId="-//SPRING//DTD BEAN 2.0//EN"
				uri="platform:/plugin/org.springframework/org/springframework/beans/factory/xml/spring-beans-2.0.dtd"
				webURL="http://www.springframework.org/dtd/spring-beans-2.0.dtd" />
<!--			<public 
