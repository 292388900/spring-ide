<?xml version="1.0" encoding="UTF-8"?>
<project name="Build specific targets and properties" default="noDefault">

	<import file="../customTargets.xml" />
	
	<property name="updateSiteStagingLocation" value="${buildDirectory}/../../updatesite_nightly" />
	<property name="eclipseStagingLocation" value="${buildDirectory}/../../eclipse_stage" />

	<property name="featureName" value="org.springframework.ide.eclipse.feature" />
	<property name="featureCategory" value="Features" />
	
	<!-- ===================================================================== -->
	<!-- Steps to do before setup -->
	<!-- ===================================================================== -->
	<target name="preSetup">
		<delete dir="${buildDirectory}" />
		<delete dir="${updateSiteStagingLocation}" />
		<delete dir="${eclipseStagingLocation}" />
		<tstamp />
	</target>

</project>
