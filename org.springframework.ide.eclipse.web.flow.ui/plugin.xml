<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.springframework.ide.eclipse.web.flow.ui"
   name="%pluginName"
   version="0.0.4"
   provider-name="%providerName"
   class="org.springframework.ide.eclipse.web.flow.ui.WebFlowUIPlugin">

   <runtime>
      <library name="webflow-ui.jar">
         <export name="*"/>
      </library>
   </runtime>

    <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.springframework.ide.eclipse.core" version="1.2.1" match="greaterOrEqual"/>
      <import plugin="org.springframework.ide.eclipse.ui" version="1.2.1" match="greaterOrEqual"/>
      <import plugin="org.springframework.ide.eclipse.web.flow.core"/>
      <import plugin="org.springframework.ide.eclipse.beans.core" version="1.2.1" match="greaterOrEqual"/>
      <import plugin="org.springframework.ide.eclipse.beans.ui.graph" version="1.2.1" match="greaterOrEqual"/>
      <import plugin="org.springframework.ide.eclipse.beans.ui" version="1.2.1" match="greaterOrEqual"/>
   </requires>
   
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%categoryView.springIDE"
            id="org.springframework.ide.eclipse.web.flow.ui.views">
      </category>
      <view
            name="%view.beansView"
            icon="icons/full/obj16/spring_obj.gif"
            category="org.springframework.ide.eclipse.beans.ui.views"
            class="org.springframework.ide.eclipse.web.flow.ui.views.WebFlowView"
            id="org.springframework.ide.eclipse.web.flow.ui.views.webFlowView">
      </view>
   </extension>
   
 	<extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            class="org.springframework.ide.eclipse.web.flow.ui.properties.ConfigurationPropertyPage"
            name="%configurationPropertyPage"
            id="org.springframework.ide.eclipse.web.flow.ui.properties.ConfigurationPropertyPage">
         <filter
               name="nature"
               value="org.springframework.ide.eclipse.core.springnature">
         </filter>
      </page>
   </extension>
  <extension
        point="org.eclipse.ui.popupMenus">
     <viewerContribution
            targetID="#WebFlowViewContext"
            id="org.springframework.ide.eclipse.web.flow.ui.graph.actions.webFlowViewContext">
        <visibility>
           <or>
              <objectClass name="org.springframework.ide.eclipse.beans.core.model.IBeansConfigSet"/>
           </or>
        </visibility>
        <action
              class="org.springframework.ide.eclipse.web.flow.ui.views.actions.ShowGraphAction"
              id="org.springframework.ide.eclipse.web.flow.ui.showGraphAction"
              label="Open Beans Graph"
              menubarPath="additions"/>
     </viewerContribution>
     <viewerContribution
            targetID="#WebFlowViewContext"
            id="org.springframework.ide.eclipse.web.flow.ui.graph.actions.webFlowViewContext">
        <visibility>
           <or>
              <objectClass name="org.springframework.ide.eclipse.beans.core.model.IBeansConfigSet"/>
           </or>
        </visibility>
        <action
              class="org.springframework.ide.eclipse.web.flow.ui.views.actions.ShowInViewAction"
              id="org.springframework.ide.eclipse.web.flow.ui.showInViewAction"
              label="Open Beans View"
              menubarPath="additions"/>
     </viewerContribution>
  </extension>
</plugin>
