<plugin>

	<extension
		point="org.springframework.ide.eclipse.beans.ui.namespaces">
		<namespace
			name="Spring Batch"
			labelProvider="org.springframework.ide.eclipse.batch.ui.namespaces.BatchNamespaceLabelProvider"
			uri="http://www.springframework.org/schema/batch" 
			prefix="batch" 
			icon="icons/full/obj16/spring_batch_obj.gif" />
	</extension>
	
	<extension
		point="org.springframework.ide.eclipse.beans.ui.editor.namespaces">
		<namespace
			contentAssistProcessor="org.springframework.ide.eclipse.batch.ui.editor.contentassist.batch.BatchContentAssistProcessor"
			elementLocator="org.springframework.ide.eclipse.batch.ui.namespaces.BatchReferenceableElementsLocator"
			hyperLinkDetector="org.springframework.ide.eclipse.batch.ui.editor.hyperlink.batch.BatchHyperlinkDetector"
			labelProvider="org.springframework.ide.eclipse.batch.ui.editor.outline.batch.BatchOutlineLabelProvider"
			name="Spring Batch"
			uri="http://www.springframework.org/schema/batch" />
	</extension>
	
	<extension
		point="org.springframework.ide.eclipse.beans.core.namespaces">
		<namespace uri="http://www.springframework.org/schema/batch" >
			<!-- for Spring Batch 2.1.0 -->
			<namespaceHandler class="org.springframework.batch.core.configuration.xml.CoreNamespaceHandler" 
				schemaLocation="http://www.springframework.org/schema/batch/spring-batch.xsd" 
				provider="org.springframework.batch.core" />
			<namespaceHandler class="org.springframework.batch.core.configuration.xml.CoreNamespaceHandler" 
				schemaLocation="http://www.springframework.org/schema/batch/spring-batch-2.1.xsd" 
				provider="org.springframework.batch.core" />
			
			<!-- for Spring Batch pre-2.1.0 -->
			<namespaceHandler class="org.springframework.batch.core.configuration.v1.xml.CoreNamespaceHandler" 
				schemaLocation="http://www.springframework.org/schema/batch/spring-batch-2.0.xsd" />
		</namespace>
	</extension>

</plugin>
