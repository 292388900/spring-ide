<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

 	<extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            class="org.springframework.ide.eclipse.webflow.ui.properties.ConfigurationPropertyPage"
            name="%configurationPropertyPage"
            id="org.springframework.ide.eclipse.web.flow.ui.properties.ConfigurationPropertyPage">
         <filter
               name="nature"
               value="org.springframework.ide.eclipse.core.springnature">
         </filter>
      </page>
   </extension>
   
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer viewerId="org.springframework.ide.eclipse.beans.ui.navigator.BeansExplorer"/>
      <viewerContentBinding viewerId="org.springframework.ide.eclipse.beans.ui.navigator.BeansExplorer">
         <includes>
            <contentExtension pattern="org.springframework.ide.eclipse.webflow.ui.navigator.projectExplorerContent"/>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding viewerId="org.springframework.ide.eclipse.beans.ui.navigator.BeansExplorer">
         <includes>
            <actionExtension pattern="org.springframework.ide.eclipse.webflow.ui.navigator.actions"/>
         </includes>
      </viewerActionBinding>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            id="org.springframework.ide.eclipse.webflow.ui.navigator.projectExplorerContent"
            name="%navigatorContentName"
            contentProvider="org.springframework.ide.eclipse.webflow.ui.navigator.WebflowNavigatorContentProvider"
            labelProvider="org.springframework.ide.eclipse.webflow.ui.navigator.WebflowNavigatorLabelProvider"
            activeByDefault="true">
		 <triggerPoints>
			<or>
				<instanceof value="org.eclipse.core.resources.IFile"/>
                <instanceof value="org.eclipse.core.resources.IStorage"/>
				<instanceof value="org.springframework.ide.eclipse.core.model.IModelElement"/>
			</or>
		 </triggerPoints>
         <possibleChildren>
			<or>
				<instanceof value="org.eclipse.core.resources.IFile"/>
                <instanceof value="org.eclipse.core.resources.IStorage"/>
				<instanceof value="org.springframework.ide.eclipse.core.model.IModelElement"/>
			</or>
         </possibleChildren>
      </navigatorContent>

      <actionProvider
            id="org.springframework.ide.eclipse.webflow.ui.navigator.actions"
            class="org.springframework.ide.eclipse.webflow.ui.navigator.actions.WebflowNavigatorActionProvider">
         <enablement>
					<instanceof value="org.springframework.ide.eclipse.webflow.core.model.IWebflowConfig"/>
         </enablement>
      </actionProvider>
   </extension>
   
</plugin>
